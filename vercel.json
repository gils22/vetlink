{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@1.0.0"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://vetlink.vercel.app"
    },
    "outputDirectory": "public"
}
